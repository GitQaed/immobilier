{% extends 'base.html.twig' %}

{% block title %}Logement index{% endblock %}

{% block body %}
    <h1>Logement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Superficie</th>
                <th>Ville</th>
                <th>Prix</th>
                <th>Agence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logement in logements %}
            <tr>
                <td>{{ logement.id }}</td>
                <td>{{ logement.superficie }}</td>
                <td>{{ logement.ville }}</td>
                <td>{{ logement.prix }}</td>
                <td>{% for agence in logement.agences %}
                    {{ agence.nom }} <br>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('logement_show', {'id': logement.id}) }}">show</a>
                    <a href="{{ path('logement_edit', {'id': logement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logement_new') }}">Create new</a>
{% endblock %}
