{% extends 'base.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Superficie</th>
                <td>{{ logement.superficie }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ logement.ville }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ logement.prix }}</td>
            </tr>
            <tr>
                <th>Agence</th>
                <td>{% for agence in logement.agences %}
                {{ agence.nom }} <br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logement_index') }}">back to list</a>

    <a href="{{ path('logement_edit', {'id': logement.id}) }}">edit</a>

    {{ include('back/logement/_delete_form.html.twig') }}
{% endblock %}
